/* pages/personal/collection/collection.wxss */
.collectionItem {
  width: 100%;
  height: 200rpx;
  background: #fff;
  padding: 10rpx;
}
.collectionItem .imgBox {
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin-left: 10rpx;
}
.collectionItem .imgBox .img {
  width: 100%;
  height: 100%;
}

.collectionItem .textBox {
  width: calc(100% - 230rpx);
  float: right;
}

.collectionItem .textBox .name {
  display: block;
  font-size: 14px;
  line-height: 22px;
}
.collectionItem .textBox .collectNum {
  display: block;
  font-size: 12px;
  color: #999;
  line-height: 24px;
}
.collectionItem .textBox .price {
  display: block;
  font-size: 14px;
  color: red;
  line-height: 26px;
}