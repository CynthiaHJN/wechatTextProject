.absoluteBg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 220rpx;
  background: linear-gradient(#fe8543, #ffe786);
}
.personalCnt {
  position: relative;
  z-index: 2;
  width: 100%;
}
.personalCnt .topCon {
  width: 80%;
  height: 340rpx;
  margin: 10rpx auto;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 2px 2px 8px #ffe786;
  box-sizing: border-box;
  padding-top: 50rpx;
}
.personalCnt  .userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.personalCnt .name, .personalCnt .score, .personalCnt .line {
  width: 100%;
  text-align: center;
  font-size: 12px;
  color: #777;
}
.personalCnt .name {
  font-size: 15px;
  line-height: 50rpx;
}
.personalCnt .score label{
  color: #fe8543;
  font-weight: bold;
  line-height: 40rpx;
  font-size: 10px;
}
.personalCnt .line .link {
  float: right;
  margin-right: 20rpx;
  color: #fe8543;
}
.middleCon {
  display: flex;
  font-size: 12px;
  color: #777;
  margin-top: 40rpx;
}
.middleCon .funcItem {
  flex: 1;
  text-align: center;
}
.middleCon .funcItemIcon {
  display: block;
  width: 80rpx;
  height: 80rpx;
  /* background: #ddd; */
  margin: 0 auto;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
}
