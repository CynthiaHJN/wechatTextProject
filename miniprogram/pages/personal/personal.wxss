.bottomCon {
  width: 100%;
  margin-top: 50rpx;
  padding: 0 8%;
  box-sizing: border-box;
}
.bottomCon .funcItem {
  float: right;
  width: 50%;
  text-align: center;
  font-size: 14px;
  color: #333;
  box-shadow: 2px 2px 8px #f7efb0;
